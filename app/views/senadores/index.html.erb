<div class="theme-page">
  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/inicial">FalaSenador</a>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/senadores">Senadores</a></li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>

  <div class="container theme-showcase" role="main">
      <h1>Senadores</h1>

      <% unless @senadores.nil? %>
        <% @senadores.each do |senador| %>

            <div class="col-sm-2">
                <img class="img-thumbnail" src="<%= senador.IdentificacaoParlamentar.UrlFotoParlamentar %>" alt="Foto">
                  <h5><%= senador.IdentificacaoParlamentar.NomeParlamentar %></h5>
                  <h6><%= senador.IdentificacaoParlamentar.SiglaPartidoParlamentar + ' - ' + senador.IdentificacaoParlamentar.UfParlamentar %></h6>
                  <h6><%= senador.IdentificacaoParlamentar.CodigoParlamentar %></h6>

                  <%
                  primeira, codigo, segunda = "http://legis.senado.leg.br/dadosabertos/senador/", "5529", "/discursos.json"

                  url_codigo =  "#{primeira}#{codigo}#{segunda}"

                  origem_dis = Restfolia.at(url_codigo).get
                  discursos = origem_dis.DiscursosParlamentar.Parlamentar.Pronunciamentos.Pronunciamento

                  %>

                  <% discursos.each do |discurso| %>

                      <p>
                          <h6><%= discurso.UrlTexto %></h6>
                      </p>
                       <!-- Pegando apenas o PRIMEIRO discurso-->
                       <%break%>
                  <%end%>

                  <!--a href="#" class="btn btn-primary">Fala mais!</a-->
            </div>

        <%end%>
      <% else %>
        <h3>Nenhum senador encontrado</h3>

      <%end%>

  </div> <!-- /container -->
</div>
